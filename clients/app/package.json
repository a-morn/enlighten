{
  "name": "quiz",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-markdown": "^4.2.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.1.1",
    "react-use-websocket": "^0.9.8",
    "reset-css": "^4.0.1"
  },
  "scripts": {
    "build:style": "postcss src/styles/index.css -o src/styles/tailwind.css",
