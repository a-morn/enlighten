{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "*": ["./node_modules/@types/*", "*"]
    }
  },
  "include": ["src/**/*"]
}
