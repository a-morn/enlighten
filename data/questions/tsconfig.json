{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2018",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "typeRoots": ["src/typings"],
    "types": [],
    "paths": {
      "*": ["./node_modules/@types/*", "*"],
      "memo": ["src/types/memo.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
